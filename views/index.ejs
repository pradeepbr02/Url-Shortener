<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>URL Shortner</title>
    <link rel="stylesheet" href="css/index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Manrope:wght@700;500&display=swap" rel="stylesheet">  
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>
<body>
    <form action="/" method="post">
    <div class="main">
        <div class="container">
            <div class="header">
                <p><strong>URL</strong>  Shortener</p>
            </div>
        </div>
        
        <div class="container2">
            <div class="url">
                <input type ="text" class="enterUrl" name="longUrl" placeholder="Enter the URL to Cut"></inputs>
            </div>
        </div>
        
        <div class="container3">
            <button class="btns" type="submit">Short IT</button>
        </div>
    </div>
    <div class="main2  text-center">
        <div class="decidesize row">
            <div class="longcol col">
                <p class="para1"><bold>Entered URL</bold></p>
            <% allUrls.forEach(function(ele){ %>
                 <div class="longcol1 col">
                  <p class="para" >
                    <a href="<%=ele.full%>"> <%=ele.full%></a>
                   
                  </p> 
                </div>
            <% }) %>
                
            </div>
          
           
            <div class="shortcol col">
               <p class="para1"><bold>Generated URL</bold></p>
               <% allUrls.forEach((ele)=>{ %>
                <div class="longcol1 col">
                    <p class="para"><a href="<%=ele.short%>"> <%=ele.short%> </a>
                         </p> 
                  </div>
             <%  }) %>

              
              
            </div>
        </div>
    </div>
    </form>
   
    
   
</body>
</html>